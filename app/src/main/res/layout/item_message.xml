<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="26dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/item_message_regular_shape"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

<!--        region leftSide-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemMessage_DateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemMessage_TimeInTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightText"
                    android:textStyle="bold"
                    android:text="Time-In" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightText"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="-" />

                <TextView
                    android:id="@+id/itemMessage_TimeOutTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightText"
                    android:textStyle="bold"
                    android:text="TimeOut" />
            </LinearLayout>

        </LinearLayout>
<!--        endregion-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemMessage_PlusSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#2563ea"
                android:gravity="end"
                android:layout_marginEnd="3dp"
                android:text="+" />

            <TextView
                android:id="@+id/itemMessage_WorkHrsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textSize="26dp"
                android:textColor="#2563ea"
                android:gravity="end"
                android:text="8" />

            <ImageButton
                android:id="@+id/itemMessage_TrashButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginStart="26dp"
                android:background="@android:color/transparent"
                android:src="@drawable/delete"
                 />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>